<?import com.esri.arcgisruntime.mapping.view.MapView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>

<StackPane fx:controller="com.esri.samples.na.routing_around_barriers.RoutingAroundBarriersController"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="/css/style.css">

  <!--      SDK SceneView-->
  <MapView fx:id="mapView"/>

  <!--      Controls Area-->
  <VBox StackPane.alignment="TOP_LEFT" maxWidth="200" styleClass="panel-region">

    <!--      Control Panel-->
    <VBox StackPane.alignment="TOP_LEFT" maxHeight="400" styleClass="panel-region" spacing="10">

      <!--      Control Panel Styling-->
      <padding>
        <Insets topRightBottomLeft="10"/>
      </padding>
      <background>
        <Background>
          <fills>
            <BackgroundFill>
              <fill>
                <Color opacity="0.5"/>
              </fill>
            </BackgroundFill>
          </fills>
        </Background>
      </background>

      <!--      Edit Mode Toggle Buttons-->
      <Label text="Edit Mode:"/>
      <HBox minWidth="150" maxWidth="Infinity">
        <ToggleButton fx:id="btnAddStop" text="Stops" selected="true" minWidth="75" maxWidth="Infinity">
          <toggleGroup>
            <ToggleGroup fx:id="toggleGroup"/>
          </toggleGroup>
        </ToggleButton>
        <ToggleButton fx:id="btnAddBarrier" toggleGroup="$toggleGroup" text="Barriers" minWidth="75" maxWidth="Infinity"/>
      </HBox>

      <Separator/>

      <!--      Routing Options Checkboxes-->
      <Label text="Routing Options:"/>
      <CheckBox fx:id="findBestSequenceCheckBox" text="Find best sequence"
                onAction="#togglePreserveStopsCheckBoxes"/>

      <VBox styleClass="panel-region" spacing="10">
        <padding>
          <Insets left="10"/>
        </padding>
        <CheckBox fx:id="preserveFirstStopCheckBox" text="Preserve first stop" disable="true"/>
        <CheckBox fx:id="preserveLastStopCheckBox" text="Preserve last stop" disable="true"/>
      </VBox>
      <Separator/>

      <!--      Action Buttons-->
      <Button text="Determine Route" onAction="#setupRouteTask" maxWidth="Infinity"/>
      <Button text="Reset" onAction="#clearRouteAndGraphics" maxWidth="Infinity"/>
    </VBox>

    <!--      Directions Accordion-->
    <VBox maxHeight="250" styleClass="panel-region" spacing="10">
      <Accordion layoutX="20.0" layoutY="100.0" prefHeight="400.0" prefWidth="680.0">
        <panes>
          <TitledPane text="Route Directions">
            <ListView fx:id="directionsList"/>
          </TitledPane>
        </panes>
      </Accordion>
    </VBox>

  </VBox>

</StackPane>